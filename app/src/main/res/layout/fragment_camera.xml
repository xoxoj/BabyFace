<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_btn"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_dark_gray"
        >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/cwac_cam2_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_photo_camera_white"
            android:selectable="false"
            android:clickable="false"
            fab:fab_colorNormal="@android:color/transparent"
            fab:fab_colorPressed="@android:color/transparent"
            fab:fab_showShadow="false"
            fab:fab_shadowColor="@android:color/transparent"
            />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/cwac_cam2_preview_stack"
        android:layout_toLeftOf="@id/layout_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.commonsware.cwac.cam2.CameraView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </FrameLayout>

    <ProgressBar
        android:id="@+id/cwac_cam2_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"/>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/cwac_cam2_switch_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_camera_front_white_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="108dp"
        android:layout_marginTop="8dp"
        fab:fab_colorNormal="#46000000"
        fab:fab_colorPressed="#64000000"
        fab:fab_size="mini"
        fab:fab_showShadow="false"
        fab:fab_shadowColor="@android:color/transparent"
        />

    <View
        android:id="@+id/btn_switch_camera"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="108dp"
        android:layout_marginTop="8dp"
        />


    <!-- not needed by app but required by camera library -->
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/cwac_cam2_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

</RelativeLayout>