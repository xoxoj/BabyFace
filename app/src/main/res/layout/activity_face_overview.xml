<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_person"
        android:background="@color/primary"
        />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        />

    <ImageView
        android:id="@+id/img_clouds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:src="@drawable/background_clouds"
        android:scaleType="fitEnd"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/img_clouds"
        android:background="@android:color/white"
        />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boby"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="30dp"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_name"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >

        <LinearLayout
            style="@style/LayoutAction"
            >

            <ImageView
                android:src="@drawable/ic_photo_camera"
                style="@style/ImageAction"
                />

            <TextView
                android:text="Take photo"
                style="@style/TextAction"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/LayoutAction"
            >

            <ImageView
                android:src="@drawable/ic_movie"
                style="@style/ImageAction"
                />

            <TextView
                android:text="Create video"
                style="@style/TextAction"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/LayoutAction"
            >

            <ImageView
                android:src="@drawable/ic_photo"
                style="@style/ImageAction"
                />

            <TextView
                android:text="View photos"
                style="@style/TextAction"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/LayoutAction"
            >

            <ImageView
                android:src="@drawable/ic_settings"
                style="@style/ImageAction"
                />

            <TextView
                android:text="Settings"
                style="@style/TextAction"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>